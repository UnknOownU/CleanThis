{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}

	<section class="container">
		<div class="row">
			<div class="col mt6">
				<h1>Inscription</h1>

				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm) }}
				<fieldset class="mg-5">
					<legend>Identité</legend>
					{{ form_row(registrationForm.lastname) }}
					{{ form_row(registrationForm.firstname) }}
					{{ form_row(registrationForm.email) }}
				</fieldset>
				<fieldset class="mg-5">
					<legend>Cordonnées</legend>
					{{ form_row(registrationForm.street) }}
					{{ form_row(registrationForm.zipcode) }}
					{{ form_row(registrationForm.city) }}
					{{ form_row(registrationForm.phone) }}
				</fieldset>

				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
				{{ form_row(registrationForm.RGPDConsent) }}

				<button type="submit" class="btn btn-primary my-3">inscription</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>

{% endblock %}
